// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WorkflowRun {
  id           Int      @id @default(autoincrement())
  prompt       String
  action       String
  ai_response  String
  api_response String
  final_result String
  created_at   DateTime @default(now())
}

